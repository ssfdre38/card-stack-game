<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a2e"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Game Settings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#eee"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <!-- Starting Cards -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Starting Cards"
            android:textSize="18sp"
            android:textColor="#eee"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="16sp"
                android:textColor="#aaa"
                android:paddingEnd="8dp" />

            <SeekBar
                android:id="@+id/startingCardsSeekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="5"
                android:progress="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="16sp"
                android:textColor="#aaa"
                android:paddingStart="8dp" />

            <TextView
                android:id="@+id/startingCardsValue"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#eee"
                android:gravity="center"
                android:paddingStart="8dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Number of cards each player starts with"
            android:textSize="12sp"
            android:textColor="#888"
            android:paddingBottom="16dp" />

        <!-- Action Card Stacking -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Action Card Stacking"
                    android:textSize="16sp"
                    android:textColor="#eee" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Allow Skip→Skip, Reverse→Reverse, +2→+2"
                    android:textSize="12sp"
                    android:textColor="#888" />
            </LinearLayout>

            <Switch
                android:id="@+id/actionStackingSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333" />

        <!-- Draw on No Play -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Draw When Can't Play"
                    android:textSize="16sp"
                    android:textColor="#eee" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Must draw a card if you have no valid plays"
                    android:textSize="12sp"
                    android:textColor="#888" />
            </LinearLayout>

            <Switch
                android:id="@+id/drawOnNoPlaySwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333" />

        <!-- Jump-In Rule -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jump-In Rule"
                    android:textSize="16sp"
                    android:textColor="#eee" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Play identical card out of turn (advanced)"
                    android:textSize="12sp"
                    android:textColor="#888" />
            </LinearLayout>

            <Switch
                android:id="@+id/jumpInSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333" />

        <!-- Seven-Zero Rule -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seven-Zero Rule"
                    android:textSize="16sp"
                    android:textColor="#eee" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7 = swap hands, 0 = rotate hands (fun variant)"
                    android:textSize="12sp"
                    android:textColor="#888" />
            </LinearLayout>

            <Switch
                android:id="@+id/sevenZeroSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333" />

        <!-- Progressive Uno -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progressive Draw"
                    android:textSize="16sp"
                    android:textColor="#eee" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Draw cards stack (2+2=4, 4+2=6, etc.)"
                    android:textSize="12sp"
                    android:textColor="#888" />
            </LinearLayout>

            <Switch
                android:id="@+id/progressiveSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333" />

        <!-- Force Play -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Force Play"
                    android:textSize="16sp"
                    android:textColor="#eee" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Must play if you have a valid card"
                    android:textSize="12sp"
                    android:textColor="#888" />
            </LinearLayout>

            <Switch
                android:id="@+id/forcePlaySwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333" />

        <!-- Challenge Draw Four -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Challenge Wild +4"
                    android:textSize="16sp"
                    android:textColor="#eee" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Challenge if player had valid card (advanced)"
                    android:textSize="12sp"
                    android:textColor="#888" />
            </LinearLayout>

            <Switch
                android:id="@+id/challengeDrawFourSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false" />
        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="24dp"
            android:paddingBottom="16dp">

            <Button
                android:id="@+id/resetButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reset Defaults"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#e94560" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save Settings"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:backgroundTint="#0f3460" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Note: Settings apply to new games only. Restart the game to use new settings."
            android:textSize="12sp"
            android:textColor="#888"
            android:textStyle="italic"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="16dp" />

    </LinearLayout>
</ScrollView>
