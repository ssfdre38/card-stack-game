<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a2e"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- App Icon/Logo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🃏"
            android:textSize="72sp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <!-- App Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Stack"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#eee"
            android:paddingBottom="4dp" />

        <!-- Version -->
        <TextView
            android:id="@+id/versionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.3.2"
            android:textSize="16sp"
            android:textColor="#aaa"
            android:paddingBottom="24dp" />

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Card Stack"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#eee"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A fun and strategic card game with customizable rules, AI opponents, and beautiful card designs. Play the classic matching card game with your own twist!"
            android:textSize="14sp"
            android:textColor="#ccc"
            android:paddingBottom="24dp"
            android:lineSpacingExtra="4dp" />

        <!-- Features -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✨ Features"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#eee"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 3 intelligent AI opponents\n• Customizable game rules\n• Screen rotation support\n• Beautiful card designs\n• Cryptographically secure shuffling\n• Multiple game modes\n• Save preferences"
            android:textSize="14sp"
            android:textColor="#ccc"
            android:paddingBottom="24dp"
            android:lineSpacingExtra="4dp" />

        <!-- Copyright -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📋 Copyright &amp; License"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#eee"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Copyright © 2024 Card Stack Game Project"
            android:textSize="14sp"
            android:textColor="#ccc"
            android:paddingBottom="8dp"
            android:lineSpacingExtra="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Licensed under the MIT License"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Permission is hereby granted, free of charge, to any person obtaining a copy of this software and associated documentation files, to deal in the Software without restriction, including without limitation the rights to use, copy, modify, merge, publish, distribute, sublicense, and/or sell copies of the Software."
            android:textSize="12sp"
            android:textColor="#999"
            android:paddingBottom="16dp"
            android:lineSpacingExtra="4dp"
            android:fontFamily="monospace" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="THE SOFTWARE IS PROVIDED &quot;AS IS&quot;, WITHOUT WARRANTY OF ANY KIND, EXPRESS OR IMPLIED, INCLUDING BUT NOT LIMITED TO THE WARRANTIES OF MERCHANTABILITY, FITNESS FOR A PARTICULAR PURPOSE AND NONINFRINGEMENT."
            android:textSize="11sp"
            android:textColor="#888"
            android:paddingBottom="24dp"
            android:lineSpacingExtra="4dp"
            android:fontFamily="monospace" />

        <!-- Third Party -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📚 Third-Party Licenses"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#eee"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AndroidX Libraries"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#ddd"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Copyright © The Android Open Source Project\nLicensed under the Apache License 2.0"
            android:textSize="12sp"
            android:textColor="#999"
            android:paddingBottom="16dp"
            android:lineSpacingExtra="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Material Design Components"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#ddd"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Copyright © Google Inc.\nLicensed under the Apache License 2.0"
            android:textSize="12sp"
            android:textColor="#999"
            android:paddingBottom="24dp"
            android:lineSpacingExtra="4dp" />

        <!-- Disclaimer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚖️ Trademark Notice"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#eee"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This game is an original implementation and does not use or infringe upon any registered trademarks. All card designs, artwork, and branding are original creations specifically designed for this application.\n\nThis is not affiliated with, endorsed by, or connected to Mattel, Inc. or any other card game manufacturer."
            android:textSize="12sp"
            android:textColor="#999"
            android:paddingBottom="24dp"
            android:lineSpacingExtra="4dp" />

        <!-- Credits -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="👥 Credits"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#eee"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Development: Card Stack Team\nUI/UX Design: Original Design\nIcon Design: Custom Graphics\nAI Implementation: Strategic Logic System\nTesting: Community Contributors"
            android:textSize="14sp"
            android:textColor="#ccc"
            android:paddingBottom="24dp"
            android:lineSpacingExtra="4dp" />

        <!-- Contact -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📧 Support"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#eee"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="For support, feature requests, or bug reports:\n\nGitHub: github.com/ssfdre38/card-stack-game\nIssues: github.com/ssfdre38/card-stack-game/issues"
            android:textSize="14sp"
            android:textColor="#ccc"
            android:paddingBottom="24dp"
            android:lineSpacingExtra="4dp"
            android:autoLink="web" />

        <!-- Build Info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Build: October 2024\nMin SDK: Android 7.0 (API 24)\nTarget SDK: Android 14 (API 34)"
            android:textSize="11sp"
            android:textColor="#777"
            android:paddingBottom="32dp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:fontFamily="monospace" />

    </LinearLayout>
</ScrollView>
