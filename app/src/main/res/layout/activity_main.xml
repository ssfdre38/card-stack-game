<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#1a1a2e">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/titleView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Card Stack"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#eee"
            android:gravity="center"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/profileButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="ðŸ‘¤"
            android:textSize="20sp"
            android:backgroundTint="#16213e"
            android:gravity="center"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/statsButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="ðŸ“Š"
            android:textSize="20sp"
            android:backgroundTint="#16213e"
            android:gravity="center"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/aboutButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="â„¹"
            android:textSize="20sp"
            android:backgroundTint="#16213e"
            android:gravity="center"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/settingsButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="âš™"
            android:textSize="20sp"
            android:backgroundTint="#16213e"
            android:gravity="center" />
    </LinearLayout>

    <TextView
        android:id="@+id/currentPlayerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Player: You"
        android:textSize="18sp"
        android:textColor="#eee"
        android:gravity="center"
        android:paddingBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/player1CardsView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AI 1: 7 cards"
            android:textSize="14sp"
            android:textColor="#eee"
            android:gravity="center" />

        <TextView
            android:id="@+id/player2CardsView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AI 2: 7 cards"
            android:textSize="14sp"
            android:textColor="#eee"
            android:gravity="center" />

        <TextView
            android:id="@+id/player3CardsView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AI 3: 7 cards"
            android:textSize="14sp"
            android:textColor="#eee"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingEnd="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Card"
                android:textSize="14sp"
                android:textColor="#eee"
                android:paddingBottom="8dp" />

            <com.cardstack.game.CardView
                android:id="@+id/topCardView"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:elevation="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/deckCountView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deck: 52"
                android:textSize="14sp"
                android:textColor="#eee"
                android:paddingBottom="8dp" />

            <Button
                android:id="@+id/drawButton"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Draw Card"
                android:textSize="14sp"
                android:backgroundTint="#0f3460" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Cards"
        android:textSize="16sp"
        android:textColor="#eee"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/playerHandLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />
    </HorizontalScrollView>

    <Button
        android:id="@+id/newGameButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Game"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#16213e" />

</LinearLayout>
